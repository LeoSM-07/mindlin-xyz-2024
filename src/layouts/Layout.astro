---
import '@fontsource-variable/space-grotesk';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="max-w-screen " lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Léo Mindlin | Student & Developer"/>
    <meta property="og:site_name" content="Léo Mindlin">
    <meta property="og:description" content="Student at McGill passionate about development." />
    <meta property="og:image" content="https://mindlin.xyz/og-image.png"/>
    <meta property="og:url" content="https://mindlin.xyz/" />
    <meta property="og:type" content="website" />
		<link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)" />
		<link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
		<title>{title}</title>
	</head>
	<body class="p-5 sm:p-10 space-x-10 flex flex-row">
		<slot />
	</body>
</html>
<style is:global>

  :root {
    color-scheme: light dark;
  }

	html {
    font-family: 'Space Grotesk Variable', sans-serif;
    color: light-dark(hsl(0, 0%, 33%), hsl(0, 0%, 67%));
    background: light-dark(hsl(0deg, 0%, 95%), hsl(0, 0%, 5%));
    margin: 0;
    padding: 0;
  }

  ::-moz-selection { /* Code for Firefox */
    color: hsl(0, 0%, 95%);
    background: hsl(0, 0%, 15%);
  }

  ::selection {
    color: hsl(0, 0%, 95%);
    background: hsl(0, 0%, 15%);
  }
  body {
    margin: 0;
    padding: 2.5rem;
  }
</style>
